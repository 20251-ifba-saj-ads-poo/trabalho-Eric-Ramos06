<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifba.saj.fwads.controller.ListItinerarioController">
   <center>
      <TableView fx:id="tblItinerario" prefHeight="347.0" prefWidth="489.0">
        <columns>
          <TableColumn fx:id="clnNome" editable="false" minWidth="-1.0" prefWidth="84.0" text="Nome" />
          <TableColumn fx:id="clnHoraPartida" editable="false" minWidth="-1.0" prefWidth="155.0" text="Hora Partida" />
            <TableColumn fx:id="clnRota" editable="false" minWidth="-1.0" prefWidth="249.0" text="Rota" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" styleClass="main" stylesheets="@assets/style.css" BorderPane.alignment="CENTER">
        <buttons>
          <Button mnemonicParsing="false" onAction="#showNovoItinerario" styleClass="bottom" stylesheets="@assets/style.css" text="Novo Autor" />
        </buttons>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </ButtonBar>
   </bottom>
</BorderPane>
